<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.xmission.trevin.android.notes"
      android:versionCode="3"
      android:versionName="1.2">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-sdk android:minSdkVersion="8"
	      android:targetSdkVersion="15"/>

    <application android:icon="@drawable/icon"
     android:label="@string/app_name"
     android:theme="@style/Theme.Light.WithActionBar"
     android:allowBackup="true">
        <activity android:name=".NoteListActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
        	<action android:name="android.intent.action.EDIT"/>
		<data android:mimeType="vnd.android.cursor.dir/vnd.xmission.trevin.notes"/>
	    </intent-filter>
        </activity>

	<provider android:name="NoteProvider"
		  android:authorities="com.xmission.trevin.android.notes.Note">
	</provider>

	<activity android:name="CategoryListActivity"
		  android:launchMode="standard">
	    <intent-filter>
		<action android:name="android.intent.action.EDIT"/>
		<data android:mimeType="vnd.android.cursor.dir/vnd.xmission.trevin.notes.category"/>
	    </intent-filter>
	</activity>

	<activity android:name="ExportActivity"
		  android:launchMode="standard">
	    <intent-filter>
		<action android:name="android.settings.SYNC_SETTINGS"/>
	    </intent-filter>
	</activity>

	<activity android:name="ImportActivity"
		  android:launchMode="standard">
	    <intent-filter>
		<action android:name="android.settings.SYNC_SETTINGS"/>
	    </intent-filter>
	</activity>

	<activity android:name="PreferencesActivity">
	    <intent-filter>
		<action android:name="android.settings.APPLICATION_SETTINGS"/>
	    </intent-filter>
	</activity>

	<activity android:name="NoteEditorActivity">
	    <intent-filter>
		<action android:name="android.intent.action.EDIT"/>
		<data android:mimeType="vnd.android.cursor.dir/vnd.xmission.trevin.notes"/>
	    </intent-filter>
	</activity>

	<service android:exported="false"
	     android:label="@string/service_name_password_change"
	     android:name=".PasswordChangeService">
	</service>

	<service android:exported="false"
		 android:label="@string/service_name_import_xml"
		 android:name=".XMLImporterService">
	</service>

	<service android:exported="false"
		 android:label="@string/service_name_export"
		 android:name=".XMLExporterService">
	</service>

    </application>

</manifest>
